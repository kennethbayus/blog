<h1> Edit User </h1>

<%= form_for @user do |f| %>
	<%= render 'shared/errors', object: @user %>
	<div class="form-horizontal">
		<div class ='form-group'>
			<%= f.label :username, 'User Name', class: 'control-label col-sm-2' %>
			<div class = 'col-sm-2'>
				<%= f.text_field :username, class: 'form-control' %>
			</div>
		</div>
		<div class ='form-group'>
			<%= f.label :printname, 'Display Name', class: 'control-label col-sm-2' %>
			<div class = 'col-sm-2'>
				<%= f.text_field :printname, class: 'form-control' %>
			</div>
		</div>
		<div class="form-group">
					<%= f.label :photo, 'Photo', class: 'control-label col-sm-2' %>
					<%= f.file_field :photo %>
		</div>
		<div class ='form-group'>
			<%= f.label :password, 'Password', class: 'control-label col-sm-2' %>
			<div class = 'col-sm-2'>
				<%= f.password_field :password, class: 'form-control' %>
			</div>
		</div>
	</div>

	<div class='col-sm-offset-2 col-sm-10'>
		<%= f.submit class: 'btn btn-primary' %>
	</div>

<% end %>