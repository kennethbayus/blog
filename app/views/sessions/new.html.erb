<h1>Admin Login</h1>

<div class ='well'>

<%= form_tag '/login' do %>
	<div class ='control-group'>
		<%= label_tag :username, 'Username:' %>
		<%= text_field_tag :username %>
	</div>
	<br/>
	<div class ='control-group'>	
		<%= label_tag :password, 'Password:' %>
		<%= password_field_tag :password %>
	</div>
	<br/>
	<%= submit_tag 'Login', class: 'btn btn-success' %>
<% end %>

</div>