<h1 class= 'post_listing_header'> <%= @category.name %> </h1>
<hr/>

<% @category.posts.order('created_at DESC').each_with_index do |post,i| %>
	<% if i==0 || i%3 ==0 %>
		<div class = 'row'>
			<%= render 'posts/post', post:post%>
	<%elsif (i+1)%3 == 0 %> 
		<%= render 'posts/post', post:post%>
		</div>
		<hr/>
	<%else%>
		<%= render 'posts/post', post:post%>
	<%end%>
<% end %>