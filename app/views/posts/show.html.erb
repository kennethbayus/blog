<div class='container-fluid'>
	<% if !@post.photos.empty? %>
		<%= render 'carousel' %>
	<% end %>
</div>

<div class= 'container'>
	<h1 class ='post_title'> <%= @post.title %> </h1>

	<% if logged_in? %>
		<%= link_to 'Edit Post', edit_post_path(@post) %>
	<% end %>

	<p> <%= markdown(@post.body) %> </p>

	<% if !@post.comments.empty? %>
		<hr/>
		<h2> Comments </h2>
		<% @post.comments.each do |comment| %>
			<% if !comment[:id].nil? %>
				<%= render 'comments/comment', comment: comment %>
			<% end %>
		<% end %>
	<% end %>

<hr/>

<h2> Leave a Comment </h2>	
	<%= form_for [@post, @comment], html: {class: 'form-horizontal'} do |f| %>
		<%= render 'shared/errors', object: @comment %>
			<div class='form-group'>
				<%= f.label :username, 'Name', class: 'control-label col-sm-2' %>
				<div class= 'col-sm-4'>
					<%= f.text_field :username, class: 'form-control' %>
				</div>
			</div>
			<div class='form-group'>
				<%= f.label :email, 'Email Address', class: 'control-label col-sm-2' %>
				<div class= 'col-sm-4'>
					<%= f.text_field :email, class: 'form-control' %>
				</div>
			</div>
			<div class='form-group'>
				<%= f.label :body, 'Leave a Comment', class: 'control-label col-sm-2' %>
				<div class= 'col-sm-4'>
					<%= f.text_area :body, class: 'ta' %>
				</div>
			</div>
			<div class="col-sm-offset-2 col-sm-10">
				<%= f.submit 'Add a Comment', class: 'btn btn-primary' %>
			</div>
	<% end %>

</div>