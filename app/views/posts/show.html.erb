
	<% if !@post.photos.empty? %>
		<%= render 'carousel', post: @post %>
	<% end %>
	
	<div row>
		<div class='col-md-9'>
			<div class='well'>
				<h1 class ='post_title'> 
				<% if logged_in? %>
					<%= link_to 'Edit Post', edit_post_path(@post) %> <br/> 
				<% end %>
				<%= @post.title %> 	
				</h1>
				<hr/>
				<p> <%= markdown(@post.body) %> </p>
			</div>
		</div>

		<div class = 'col-md-3'>
			<div class ='well'>
				<h3 class='post_tag'> <em> <%= @post.tag_line %> </em></h3>
				<h5 class='posted_by'> a post by <%= @post.user.printname %> </h5>
				<%= image_tag @post.user.photo.square_thumb.url, class: 'profile-pic img-responsive center-block'%>
				<h6 class='posted_date'> posted on <%= display_date_time(@post.created_at) %> </h6>
				<% if !@post.categories.empty? %>
					<ul class= 'tags'> 
					<% @post.categories.each do |cat| %>
						<li class="glyphicon glyphicon-tag cat-tag"> <%= link_to cat.name, category_path(cat), class: 'tag' %> </li>
					<% end %>
					</ul>
				<% end %>
			</div>
		</div>
	</div>

