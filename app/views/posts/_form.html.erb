	<%= form_for @post do |f| %>
		<%= render 'shared/errors', object: @post %>
			<div class="form-horizontal">
  			<div class="form-group">
					<%= f.label :title, 'Title', class:'control-label col-sm-2' %>
					<%= f.text_field :title, class: 'new_post_title' %>
				</div>
				<div class="form-group">
					<%= f.label :body, 'Post Body', class:'control-label col-sm-2' %>
					<%= f.text_area :body, class: 'new_post_body'  %>
				</div>
				<div class="form-group">
					<%= f.label :photos, 'Photo', class:'control-label col-sm-2' %>
					<%= f.file_field :photos, multiple: true %>
				</div>
			</div>
			<%= f.submit button, class:'btn btn-primary' %>
	<% end %>