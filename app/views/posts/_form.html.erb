	<%= form_for @post do |f| %>
		<%= render 'shared/errors', object: @post %>
			<div class="form-horizontal">
  			<div class="form-group">
					<%= f.label :title, 'Title', class:'control-label col-sm-2' %>
					<%= f.text_field :title %>
				</div>
				<div class="form-group">
					<%= f.label :body, 'Post Body', class:'control-label col-sm-2' %>
					<%= f.text_area :body %>
				</div>
			</div>
			<%= f.submit 'Update Post', class:'btn btn-primary' %>
	<% end %>